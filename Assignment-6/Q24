
#include <stdio.h>

int main() {
    int num, digit, count = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    while (num != 0) {
        digit = num % 10;  // extract last digit

        // check if digit is a single-digit perfect square
        if (digit == 0 || digit == 1 || digit == 4 || digit == 9) {
            count++;
        }

        num = num / 10;  // remove last digit
    }

    printf("Total single-digit perfect squares in number: %d\n", count);

    return 0;
}
