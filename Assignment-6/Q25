#include <stdio.h>

int main() {
    int num, digit, count = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    while (num != 0) {
        digit = num % 10;  // get last digit

        // check if digit is single-digit prime
        if (digit == 2 || digit == 3 || digit == 5 || digit == 7) {
            count++;
        }

        num = num / 10;  // remove last digit
    }

    printf("Total single-digit prime numbers: %d\n", count);

    return 0;
}
