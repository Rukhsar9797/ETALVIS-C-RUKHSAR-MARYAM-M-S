#include <stdio.h>

int main() {
    int num = 9999;

    while (num >= 1000) {  // 4-digit numbers
        if (num % 7 == 0 && num % 9 == 0) {
            printf("Largest 4-digit number divisible by 7 and 9 is: %d\n", num);
            break; // stop at first (largest) number
        }
        num--;
    }

    return 0;
}
