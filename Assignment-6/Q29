#include <stdio.h>

int main() {
    int a, b, c;
    int x, y, gcd, lcm_ab, lcm_abc;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &a, &b, &c);

    // Step 1: Find LCM of first two numbers (a & b)
    x = a;
    y = b;
    while (x != y) {
        if (x > y) {
            x = x - y;
        } else {
            y = y - x;
        }
    }
    gcd = x;  // or y
    lcm_ab = (a * b) / gcd;

    // Step 2: Find LCM of lcm_ab and c
    x = lcm_ab;
    y = c;
    while (x != y) {
        if (x > y) {
            x = x - y;
        } else {
            y = y - x;
        }
    }
    gcd = x;  // or y
    lcm_abc = (lcm_ab * c) / gcd;

    printf("LCM of %d, %d and %d is %d\n", a, b, c, lcm_abc);

    return 0;
}
